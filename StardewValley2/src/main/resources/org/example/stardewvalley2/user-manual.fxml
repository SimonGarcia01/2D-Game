<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.stardewvalley2.control.UserManualController">
   <ScrollPane fitToWidth="true" prefWidth="600" prefHeight="800" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
      <VBox>
         <Label text="User Manual" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <Label text="General Movement and Interaction Keys:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="Movement:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Label text="↑ - Up" />
            <Label text="← - Left" />
            <Label text="↓ - Down" />
            <Label text="→ - Right" />

            <Label text="Interactions:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Label text="E - Interact with chest (must be close to the chest)" />
            <Label text="F - To hit a chicken or a cow with sword ***" />
            <Label text="Z - To pickaxe a rock ***" />
            <Label text="C - To chop a tree with an axe ***" />
            <Label text="X - To place a crop on a clear soil tile using a hoe ***" />

            <Label text="Resetting Tool Durability:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="All items have a base durability of 10 hit points. For a reset, the durability must drop below the base." />
            <Label text="H - To reset the durability of the sword" />
            <Label text="J - To reset the durability of the pickaxe" />
            <Label text="K - To reset the durability of the axe" />
            <Label text="L - To reset the durability of the hoe" />


         <!-- Section: Help and Achievements -->
         <VBox spacing="10">
            <Label text="Help and Achievements:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="P - Displays instructions" />
            <Label text="U - Shows achievement tree" />
         </VBox>

         <!-- Section: General Overview of the Game -->
         <VBox spacing="10">
            <Label text="General Overview of the Game:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="StardewValley 2 has 3 maps:" />
            <Label text="Main House -> Enter through the door of the upper house next to the top sidewalk." />
            <Label text="Forest -> Enter through the bridge on the right edge of the village." />
            <Label text="Village -> Return through the main house door or the bridge in the forest." />
         </VBox>

         <!-- Section: Mastery Points -->
         <VBox spacing="10">
            <Label text="Mastery Points:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="The avatar earns 1 mastery point after destroying any obstacle or planting a crop." />
         </VBox>

         <!-- Section: Resetting Tool Durability -->
         <VBox spacing="10">
            <Label text="Resetting Tool’s Durability:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="Tools require materials to reset durability. Materials are obtained as follows:" />
            <Label text="Wood Stack: From chopping down trees (4-7 units per tree)." />
            <Label text="Stone Stack: From breaking rocks (4-7 units per rock)." />
            <Label text="Costs to fix every tool:" />
            <Label text="Sword - Cost: 1 Wood + 2 Stone" />
            <Label text="Pickaxe - Cost: 2 Wood + 3 Stone" />
            <Label text="Axe - Cost: 2 Wood + 2 Stone" />
            <Label text="Hoe - Cost: 1 Wood + 1 Stone" />
         </VBox>

         <!-- Section: Achievements -->
         <VBox spacing="10">
            <Label text="Achievements:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="Achievements are earned for the following actions:" />
            <Label text="Walking" />
            <Label text="Entering the main house" />
            <Label text="Going to the forest" />
            <Label text="Picking up the tools" />
            <Label text="Destroying an obstacle" />
            <Label text="Planting a crop" />
            <Label text="Killing an animal" />
            <Label text="Fixing any tool" />
         </VBox>
      </VBox>
   </ScrollPane>
   <Button fx:id="closeButton" text="Back to Game" onAction="#closeWindow" alignment="CENTER" layoutX="900" layoutY="700"/>
</AnchorPane>
